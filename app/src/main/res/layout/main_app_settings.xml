<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/selectLanguageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/language"
                android:textColor="@color/md_theme_outlineVariant_mediumContrast" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="?attr/textInputOutlinedExposedDropdownMenuStyle"
            android:id="@+id/languageSelectContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <dev.wander.android.airtagforall.ui.extensions.AppAutoCompleteTextView
                android:id="@+id/languageSelectDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/selectAnisetteServerUrlTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/anisette_server_url"
                android:textColor="@color/md_theme_outlineVariant_mediumContrast" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/anisetteServerUrlOkIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/check_circle_24px_fill"
                    app:tint="@color/md_theme_outline" />

                <ImageView
                    android:id="@+id/anisetteServerUrlErrorIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    android:visibility="gone"
                    app:srcCompat="@drawable/warning_24px_fill"
                    app:tint="@color/md_theme_error" />

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/anisetteServerUrlProgressIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    app:hideAnimationBehavior="inward"
                    app:indicatorSize="21dp"
                    app:showAnimationBehavior="inward"
                    app:trackColor="@color/md_theme_surfaceVariant_highContrast"
                    app:trackCornerRadius="2dp"
                    />


            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="?attr/textInputOutlinedExposedDropdownMenuStyle"
            android:id="@+id/anisetteServerUrlContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:helperTextEnabled="true"
            app:helperText="@string/url_to_an_anisette_server"
            app:errorEnabled="true"
            app:errorTextColor="@color/md_theme_error"
            app:errorIconDrawable="@drawable/exclamation_24"
            app:errorIconTint="@color/md_theme_error"
            >

            <com.google.android.material.textfield.MaterialAutoCompleteTextView
                android:id="@+id/anisetteServerUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text|textUri"
                android:singleLine="true"
                android:completionThreshold="1"
                android:imeOptions="actionDone"
                />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

</layout>